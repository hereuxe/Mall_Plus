<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#ffffff" android:textAlignment="center">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mall_plus_4" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="150dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                android:id="@+id/imageView"/>
        <TextView
                android:text="The Achievers"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:textSize="60sp"
                android:fontFamily="@font/bangers" android:textAlignment="center"/>
        <TextView
                android:text="Nothing will work unless you do!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textAlignment="center" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:fontFamily="@font/antic"/>

</androidx.constraintlayout.widget.ConstraintLayout>